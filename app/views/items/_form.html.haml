= form_for @item do |f|
  -if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :store_image
    = f.file_field :store_image
    - if @item.store_image?
      = image_tag image_item_path(@item, :type => :store, :size => :thumb)
      %label
        = f.check_box :remove_store_image
        Remove
  .field
    = f.label :usage_image
    = f.file_field :usage_image
    - if @item.usage_image?
      = image_tag image_item_path(@item, :type => :usage, :size => :thumb)
      %label
        = f.check_box :remove_usage_image
        Remove
  .actions
    = f.submit 'Save'
